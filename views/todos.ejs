<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
</head>
<body>
    <header>
        <%- include('partials/header'); %>
    </header>
    <section>
        <h1 class="home"><%= listName %></h1>
        <ul class="todos">
        <% todos.forEach( el => { %>
            <li class='todoItem card <%= el.completed === true ? 'completed' : 'not'%>' data-id='<%=el._id%>'>
                <i class="fa-solid fa-xmark del"></i>
                <i class="fa-regular fa-circle <%= el.completed === true ? 'completed' : 'not'%>"></i>
                <i class="fa-solid fa-circle-check <%= el.completed === true ? 'completed' : 'not'%>"></i>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
            </li>
        <% }) %>    
        </ul>
    
        <h2>Things left to do: <%= left %></h2>
    
        <form action="/<%= listName %>/todos/createTodo" method='POST'>
            <input type="text" placeholder="Enter Todo Item" name='todoItem'>
            <button type="submit"><i class="fa-solid fa-plus"></i></button>
        </form>
    </section>
   

    <script src="/js/main.js"></script>
</body>
</html>